# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=5000
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
LOG_LEVEL=debug

# Database Configuration
MONGODB_URI=mongodb+srv://[USERNAME]:[PASSWORD]@[CLUSTER].mongodb.net/[DATABASE]?retryWrites=true&w=majority

# Email Configuration (Gmail)
EMAIL_USER=[YOUR_GMAIL_ADDRESS]
EMAIL_PASS=[YOUR_APP_PASSWORD]
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587

# Client Onboarding Configuration
CLIENT_FORM_BASE_URL=http://localhost:5173/client-onboarding
INVITATION_EXPIRY_HOURS=48
CAS_ENCRYPTION_KEY=[GENERATE_32_BYTE_HEX_KEY]

# File Upload Configuration
UPLOAD_MAX_FILE_SIZE=10485760
UPLOAD_ALLOWED_TYPES=application/pdf

# Claude AI Configuration
CLAUDE_API_KEY=sk-ant-api-[YOUR_ANTHROPIC_API_KEY]
CLAUDE_API_URL=https://api.anthropic.com/v1/messages
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Daily.co Configuration (for video meetings)
DAILY_API_KEY=[YOUR_DAILY_API_KEY]
DAILY_DOMAIN=https://[YOUR_SUBDOMAIN].daily.co

# Frontend Configuration
FRONTEND_URL=http://localhost:5173